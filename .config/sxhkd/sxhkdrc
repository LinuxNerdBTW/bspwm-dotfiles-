##----------------------------BSPWM-KEYBINDINGS---------------------------##

##---------- Rofi Launcher & Menus ----------##
#super + {r,a,w,e}
#    rofi -show {run,drun,window,emoji} -theme $HOME/.config/bspwm/rofi-collection/nord/nord.rasi

# program launcher
super + a
	rofi -modi emoji,drun,run,window -show drun -theme $HOME/.config/rofi/themes/nord/nord.rasi -sidebar-mode	

ctrl + alt + h
	kitty -e htop

##---------- Applications ----------##

# Launch Programs
super + x
  xfce4-terminal
super + {c,b,s,v,n,Return}
	{code,brave,thunar,pavucontrol,$HOME/bin/rofi-network-manager/rofi-network-manager.sh,kitty}

##---------- System ----------##

# Take a screenshot
Print
	xfce4-screenshooter
	
# Take a screenshot in 5 second
alt + Print	
	scrot -d 3 'Screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f $$(xdg-user-dir PICTURES) ; viewnior $$(xdg-user-dir PICTURES)/$f'

# Brighness control
XF86MonBrightness{Up,Down}
	backlight{-up,-down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{-up,-down}

XF86AudioMute
	amixer set Master toggle
	
# Music control
super + m
  $HOME/bin/menu

##---------- Bspwm ----------##

# Lockscreen
ctrl + alt + l
    betterlockscreen --lock

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
ctrl + alt + {q,r}
	bspc {quit,wm -r}

# Close App
super + q
	bspc node -c

# kill
ctrl + alt + Escape
    xkill

# Fullscreen or Monocle
super + shift + f
	bspc desktop -l next
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}
# Toogle Full screen 
super + f
    bspc node -t fullscreen

# Pseudo Tiled & tiled mode
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + {Left,Right}
	bspc desktop -f {prev.local,next.local}


# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

# Keybinding for launching openvpn 

super + shift + o
	$HOME/bin/select_vpn

alt + F4
	$HOME/bin/powermenu
ctrl + alt + shift + q
	systemctl poweroff
