#!/usr/bin/bash

if [ $1 == "start_" ]
then 
	echo "...........CHECKING SERVICE IS RUNNING OR NOT.............." 

	sudo systemctl status docker | grep -i Active: --color=auto | column 

	echo "[0] Start Docker Service if inactive or dead "
	echo "[1] Continue "
	echo "ğŸ‘‰ "
	read choice
	if [ $choice -eq 0 ]
	then
		echo "STARTING ....."
		sudo systemctl start docker

	elif [ $choice -eq 1 ]
	then 
		echo "[0] DEATTACHED MODE"
		echo "[1] JUST RUN IT AND REMOVE ON EXIT"
		echo "ğŸ‘‰ " 
		read choice 
		
		if [ $choice -eq 0 ]
		then 
			sudo docker images
			echo "REPOSITORY NAME WITH TAG ğŸ‘‰ "
			read repo_name
			echo "SELECT SHELL : "
			echo "[0] BASH"
			echo "[1] ZSH"
			echo "ğŸ‘‰ "
			read shell_
			if [ $shell_ -eq 0 ]
			then
				sudo docker run -it -d --network host $repo_name /usr/bin/bash
				echo "Do you want to execute container or not [ yes or no ] ğŸ‘‰ "
				read decision_
				if [ $decision_ == "yes" ]
				then
					echo "Executing container ... "
					sudo docker ps -a 
					echo "COPY AND PASTE CONTAINER ID FROM ABOVE ğŸ‘‰ "
					read container_id
					sudo docker exec -it $container_id /usr/bin/bash
					echo "Docker Container Executed SuccessFully ğŸ˜›"
				else
					echo "Bye World ğŸ˜"
					exit
				fi
			elif [ $shell_ -eq 1 ]
			then
				sudo docker run -it -d --network host $repo_name /usr/bin/zsh
				echo "Do you want to execute container or not [ yes or no ] ğŸ‘‰ "
				read decision_
				if [ $decision_ == "yes" ]
				then
					echo "Executing container ... "
					sudo docker ps -a
					echo "COPY AND PASTE CONTAINER ID FROM ABOVE ğŸ‘‰ "
					read container_id
					sudo docker exec -it $container_id /usr/bin/zsh
					echo "Dcoker Container Executed SuccessFully ğŸ˜›"
				else
					echo "Bye World ğŸ˜"
					exit
				fi
			else
				echo "Invalid Input ğŸ˜¤ğŸ˜¤ğŸ˜¤ "
			fi

		elif [ $choice -eq 1 ]
		then 
			sudo docker images
			echo "REPOSITORY NAME WITH TAG ğŸ‘‰ "
			read repo_name
			echo "SELECT SHELL : "
			echo "[0] BASH"
			echo "[1] ZSH"
			echo "ğŸ‘‰ "
			read shell_
			if [ $shell_ -eq 0 ]
			then
				sudo docker run -it --rm --network host $repo_name /usr/bin/bash
			elif [ $shell_ -eq 1 ]
			then
				sudo docker run -it --rm --network host $repo_name /usr/bin/zsh
			else
				echo "Invalid Input ğŸ˜¤ğŸ˜¤ğŸ˜¤ "
			fi

		else
			echo "Invalid Input ğŸ˜¤ğŸ˜¤ğŸ˜¤"
		fi
	
	else
		echo "Invalid input ğŸ˜¤ğŸ˜¤ğŸ˜¤ "
	fi



elif [ $1 == "save_" ]
then 
	sudo docker ps -a
	echo "CONTAINER ID ğŸ‘‰ "
	read container_id
	sudo docker diff $container_id

	sudo docker stop $container_id 

	echo "SAVING ğŸ˜›ğŸ˜›ğŸ˜›"
	sudo docker images
	
	echo "REPOSITORY NAME WITH TAG ğŸ‘‰ "
	read repo_name_1
	sudo docker commit $container_id $repo_name_1

	echo "REMOVING OLD CONTAINER ğŸ˜›ğŸ˜›ğŸ˜›"
	sudo docker ps -a
	echo "CONTAINER ID ğŸ‘‰ "
	read container_id_
	sudo docker rm $container_id_

	echo "REMOVING OLD IMAGE ğŸ˜›ğŸ˜›ğŸ˜›"
	sudo docker images
	echo "REPOSITORY NAME WITH TAG ğŸ‘‰ "
	read repo_name_ 
	sudo docker rmi $repo_name_
	
	sudo docker images

elif [ $1 == "stop_" ]
then
	sudo docker ps -a
	echo "CONTAINER ID ğŸ‘‰ "
	read container_id_
	echo "STOPPING ğŸ˜›ğŸ˜›ğŸ˜›"
	sudo docker stop $container_id_ 
	echo "REMOVING ğŸ˜›ğŸ˜›ğŸ˜›"
	sudo docker rm $container_id_
	echo "Done ğŸ˜›ğŸ˜›ğŸ˜›"
	
else
	echo "Exiting ğŸ˜›ğŸ˜›ğŸ˜›"

fi
